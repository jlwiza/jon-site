}





function generateColumns(response, columns) {
    var columnNames;

    if (columns) {

        fullColumns
        // if its exclusive inclusive I would do that here
        //figure out how to do the auto width of the columns later 
        columnNames = columns//,"EffectiveDate","ExpDate","UnderWriter","RA","ALOB", "EPI","ELR","PFAD","CB"];

        return columnNames.map(function (name) {

            var names = name.split(":")

            if (isDateField[names[0]]) {

                // that is so clever jeez
                return { field: (names[1] ? names[0] : name), title: (names[1] ? names[1] : name), format: (isDateField[names[0]] ? "{0:D}" : ""), template: (isDateField[names[0]] ? '#= kendo.toString(kendo.parseDate('+names[0]+'),"yyyy-MM-dd") #' : names[1])};
            } else {
                return { field: (names[1] ? names[0] : name), title: (names[1] ? names[1] : name), format: (isDateField[names[0]] ? "{0:D}" : "") };

            }
        })


    } else {

        // here we dynamically grab what we need


    }
    if (true) {

    }


}



function CreateKendoGrid(url, columns) {
    if (columns && columns.length >= 10) {
        autoGrid = true;
    }
    $.ajax({
        url: url,
        dataType: "json",
        success: function (result) {
            generateDataSource(result, columns);
        }
    });
}
function generateDataSource(result, columns) {

    var mdl = generateModel(result);
    var dataSource = new kendo.data.DataSource({
        transport: {
            read: function (options) {
                options.success(result);

            }
        },
        pageSize: 10,
        schema: {
            model: mdl
        }

    });




    generateGrid(dataSource, columns);


}


function generateModel(response) {

    var sampleDataItem = response[0];

    var model = {};
    var fields = {};
    for (var property in sampleDataItem) {
        if (property.indexOf("ID") !== -1) {
            model["id"] = property;

        }
        var propType = typeof sampleDataItem[property];
        fullColumns.push(property)

        if (propType === "number") {
            fields[property] = {
                type: "number",
                validation: {
                    required: true
                }
            };
            if (model.id === property) {
                fields[property].editable = false;
                fields[property].validation.required = false;
            }
        } else if (propType === "boolean") {
            fields[property] = {
                type: "boolean"
            };
        } else if (propType === "string") {
            var parsedDate = kendo.parseDate(sampleDataItem[property]);
            if (parsedDate) {
                fields[property] = {
                    type: "date",
                    validation: {
                        required: true
                    }
                };
                isDateField[property] = true;
            } else {
                fields[property] = {
                    validation: {
                        required: true
                    }
                };
            }
        } else {
            fields[property] = {
                validation: {
                    required: true
                }
            };
        }
    }

    model.fields = fields;

    return model;
}














































